{
    "private": true,
    "workspaces": [
        "packages/@ackee/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "build:es": "lerna exec --parallel -- BABEL_ENV=es babel src --out-dir es --extensions \".ts\" --config-file=../../../babel.config.js --source-maps inline",
        "build:types": "lerna exec -- tsc --project ./tsconfig.types.json --emitDeclarationOnly",
        "build:js": "yarn build:es",
        "build": "yarn clean && yarn build:js && yarn build:types",
        "clean": "lerna exec -- rm -rf lib es",
        "lint": "tslint \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "test": "BABEL_ENV=test jest",
        "push": "yarn build && yalc push",
        "rebuild": "yarn build && yalc push",
        "start": "yarn build && onchange 'packages/@ackee/*/src/**/*.ts' -- yarn rebuild",
        "changelog": "gitmoji-changelog",
        "version": "yarn changelog && code --wait CHANGELOG.md && git add CHANGELOG.md",
        "release": "yarn version",
        "prettier": "prettier --config ./prettier.config.js --write 'packages/@ackee/*/src/**/*.ts'"
    },
    "devDependencies": {
        "@babel/cli": "7.x",
        "@babel/core": "7.x",
        "@babel/plugin-proposal-class-properties": "7.x",
        "@babel/plugin-proposal-nullish-coalescing-operator": "7.x",
        "@babel/plugin-proposal-object-rest-spread": "7.x",
        "@babel/plugin-transform-runtime": "7.x",
        "@babel/preset-env": "7.x",
        "@babel/preset-modules": "0.x",
        "@babel/preset-typescript": "7.x",
        "@types/jest": "25.x",
        "babel-plugin-custom-import-path-transform": "1.x",
        "gitmoji-changelog": "2.x",
        "husky": "4.x",
        "jest": "26.x",
        "lerna": "^3.20.2",
        "lint-staged": "^10.2.2",
        "onchange": "5.x",
        "package-size": "2.x",
        "prettier": "2.x",
        "prettier-config-ackee": "0.x",
        "redux-saga": "1.x",
        "reselect": "4.x",
        "ts-jest": "25.x",
        "tslint-config-ackee": "0.x",
        "tslint-config-prettier": "1.x",
        "typescript": "3.x"
    },
    "dependencies": {
        "@babel/runtime": "7.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,json,md}": [
            "prettier --config ./prettier.config.js --write"
        ],
        "*.{ts}": [
            "yarn lint && yarn type-check"
        ]
    }
}
