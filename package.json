{
    "private": true,
    "workspaces": [
        "packages/@ackee/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "postinstall": "yarn bootstrap",
        "build:lib": "lerna exec --scope={@ackee/antonio-core,@ackee/antonio-utils,@ackee/antonio-auth} -- babel src --out-dir lib --extensions \".ts\" --config-file=./babel.config.js --source-maps inline",
        "build:es": "lerna exec --scope={@ackee/antonio-core,@ackee/antonio-utils,@ackee/antonio-auth} -- babel src --out-dir es --extensions \".ts\" --config-file=./babel.config.js --source-maps inline",
        "build:test": "babel ./packages/test/src --out-dir lib --extensions \".ts\" --config-file=./babel.config.js",
        "build:types": "lerna exec --scope={@ackee/antonio-core,@ackee/antonio-utils,@ackee/antonio-auth} -- tsc --project ./tsconfig.types.json --emitDeclarationOnly",
        "build:js": "yarn build:es & yarn build:lib",
        "build": "yarn clean && yarn build:js && yarn build:types",
        "clean": "lerna exec -- rm -rf lib es",
        "lint": "lerna exec --scope={@ackee/antonio-core,@ackee/antonio-utils,@ackee/antonio-auth} -- eslint 'src/**/*.ts'",
        "type-check": "tsc --noEmit",
        "type-check:watch": "yarn type-check -- --watch",
        "test": "jest",
        "push": "yarn build && yalc push",
        "rebuild": "yarn build && yalc push",
        "start": "yarn build && onchange 'packages/@ackee/*/src/**/*.ts' -- yarn rebuild",
        "changelog": "gitmoji-changelog",
        "format": "prettier --config ./prettier.config.js --write 'packages/@ackee/*/src/**/*.ts' '*.{js,json}' --loglevel warn",
        "release": "lerna publish --no-push",
        "release:beta": "yarn release --dist-tag beta --no-push",
        "prepare": "yarn build"
    },
    "devDependencies": {
        "@ackee/browserslist-config": "^1.0.1",
        "@ackee/eslint-config": "^3.0.0",
        "@babel/cli": "7.x",
        "@babel/core": "7.x",
        "@babel/eslint-parser": "^7.13.14",
        "@babel/plugin-proposal-class-properties": "7.x",
        "@babel/plugin-proposal-nullish-coalescing-operator": "7.x",
        "@babel/plugin-proposal-object-rest-spread": "7.x",
        "@babel/plugin-proposal-optional-chaining": "7.x",
        "@babel/plugin-transform-runtime": "7.x",
        "@babel/preset-env": "7.x",
        "@babel/preset-typescript": "7.x",
        "@types/jest": "25.x",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "4.x",
        "@typescript-eslint/parser": "4.x",
        "babel-eslint": "^10.1.0",
        "babel-plugin-custom-import-path-transform": "1.x",
        "babel-plugin-transform-imports": "^2.0.0",
        "core-js": "^3.11.2",
        "eslint": "^7.5.0",
        "eslint-plugin-compat": "3.9.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "2.x",
        "eslint-plugin-jsx-a11y": "6.x",
        "eslint-plugin-react": "7.x",
        "eslint-plugin-react-hooks": "^4.0.8",
        "gitmoji-changelog": "2.x",
        "husky": "4.x",
        "jest": "26.x",
        "lerna": "4.x",
        "lint-staged": "^10.2.2",
        "onchange": "7.x",
        "package-size": "2.x",
        "prettier": "2.x",
        "prettier-config-ackee": "0.x",
        "redux-saga": "1.x",
        "reselect": "4.x",
        "ts-jest": "25.x",
        "typescript": "4.x"
    },
    "dependencies": {
        "@babel/runtime": "7.x",
        "loglevel": "1.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,json,md}": [
            "yarn format"
        ],
        "*.{ts}": [
            "yarn lint && yarn type-check"
        ]
    },
    "browserslist": [
        "extends @ackee/browserslist-config"
    ],
    "license": "MIT",
    "author": "Jiří Čermák <jiri.cermak@ackee.cz>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AckeeCZ/antonio.git"
    }
}
